.row.mt-5
  %p#notice= notice
.row.mt-lg-2
  %h1 Doc Templates
%table
  %col{:style => "width: 30%"}/
  %col{:style => "width: 15%"}/
  %col{:style => "width: 15%"}/
  %col{:style => "width: 15%"}/
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @doc_templates.each do |doc_template|
      %tr
        %td= doc_template.name
        %td= link_to 'Show', doc_template, class: "btn btn-sm btn-primary"
        %td= link_to 'Edit', edit_doc_template_path(doc_template), class: "btn btn-sm btn-warning"
        %td= link_to 'Destroy', doc_template, method: :delete, class: "btn btn-sm btn-danger", data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Doc Template', new_doc_template_path, class: "btn btn-sm btn-primary"
