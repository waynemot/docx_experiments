
<% if notice %>
  <div class="row mt-5">
    <div class="col-sm-1"></div>
    <div class="col-sm-11">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
<% end %>
<main class="col-12 col-md-9 col-xl-8 py-md-3 pl-md-5 bd-content mt-lg-5">
  <div class="row mt-2">
    <div class="col-sm-1"></div>
    <div class="col-sm-11">
      <h1>Employment Types</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-11">
      <table style="margin-left: 1em; margin-top: 2em;">
        <col style="width: 30%">
        <col style="width: 25%">
        <col style="width: 15%">
        <col style="width: 15%">
        <col style="width: 15%">

        <thead>
        <tr>
          <th>Name</th>
          <th>Salary</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @employment_types.each do |employment_type| %>
          <tr>
            <td><%= employment_type.name %></td>
            <td><%= employment_type.salary %></td>
            <td><%= link_to 'Show', employment_type %></td>
            <td><%= link_to 'Edit', edit_employment_type_path(employment_type) %></td>
            <td><%= link_to 'Destroy', employment_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <br>
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-11">
      <%= link_to 'New Employment Type', new_employment_type_path %>
    </div>
  </div>
</main>